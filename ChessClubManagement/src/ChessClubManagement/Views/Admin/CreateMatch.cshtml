@model ChessClubManagement.Models.Matches
@{
	Layout = "_Layout";
    ViewData["Title"] = "Create Match";
}
<div>
    <h1>Create A Match</h1>
    <hr />
    @if (TempData["Result"] != null)
    {
        <div class="alert alert-danger">@TempData["Result"]</div>
    }
    <form asp-controller="Admin" asp-action="CreateMatch" method="post">
        <div class="input-group">
            <input type="hidden" id="datePickerDate" asp-for="MatchDate" />
            <label asp-for="MatchDate" class="input-group-addon"></label>
            <input data-provide="datepicker" class="form-control" name="datePicker" onchange="javascript: UpdateMatchDate(this.value);" />
        </div>
        <br />
        <div class="input-group">
            <label class="input-group-addon">Season:</label>
            <select asp-items="@ViewBag.SeasonDropDown" asp-for="SeasonId" class="form-control" onchange="javascript: GetStudentsInSeason(this.value);"></select>
        </div>
        <br />
        <div id="seasonfordate"></div>
        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <div class="input-group">
                    <label class="input-group-addon">Student 1:</label>
                    <select asp-for="Student1Id" id="student1dropdown" class="form-control" onchange="javascript: GetStudent2DropDown(this.value);"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <label class="input-group-addon">Student 2:</label>
                    <select asp-for="Student2Id" id="student2dropdown" class="form-control"></select>
                </div>
            </div>
        </div>
        <br />
        <input type="submit" class="btn btn-info" value="Create Match" />
    </form>
</div>