@model System.Collections.Generic.List<ChessClubManagement.Models.Matches>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Students";
}
<div>
    <h1>Matches</h1>
    <hr />
    <table class="table table-striped table-hover">
        <tr>
            <th>Date</th>
            <th>Opponents</th>
            <th>Outcome</th>
            <th></th>
        </tr>
        @foreach (var match in Model)
        {
            <tr>
                <td>@DateTime.Parse(match.MatchDate.ToString()).ToString("MM/dd/yyyy")</td>
                <td>@match.Student1.StudentFname @match.Student1.StudentLname vs. @match.Student2.StudentFname @match.Student2.StudentLname </td>
                <td>
                    @{
                        if (match.Student1Score != null && match.Student2Score != null)
                        {
                            if (match.Student1Score == 5 && match.Student2Score == 1)
                            {
                                @Html.Raw("Winner: " + match.Student1.StudentFname + " " + match.Student1.StudentLname)
                                ;
                            }
                            else if (match.Student1Score == 3 && match.Student2Score == 3)
                            {
                                @Html.Raw("Draw")
                                ;
                            }
                            else if (match.Student1Score == 1 && match.Student2Score == 5)
                            {
                                @Html.Raw("Winner: " + match.Student2.StudentFname + " " + match.Student2.StudentLname)
                            }
                            else
                            {
                                @Html.Raw("Error Determining Winner")
                                ;
                            }
                        }
                        else
                        {
                            @Html.Raw("TBD")
                        }
                    }
                </td>
                <td><form asp-controller="Matches" asp-action="Edit" asp-route-id="@match.MatchId"><input type="submit" value="Edit Match" class="btn btn-info" /></form></td>
            </tr>
        }
    </table>
</div>