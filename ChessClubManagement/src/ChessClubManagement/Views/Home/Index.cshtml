@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Welcome to the Chess Club Management System</h1>
        <ul>
            <li><a asp-controller="Members" asp-action="Standings">View Current Rankings</a></li>
            <li><a asp-controller="Matches" asp-action="Index">View Upcoming Matches</a></li>
            @if (User.Claims.Any(c => c.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role" && c.Value == "admin"))
            {
                <li><a asp-controller="Admin" asp-action="Index">Access Administrator Portal</a></li>
            }
        </ul>
    </div>
</div>
