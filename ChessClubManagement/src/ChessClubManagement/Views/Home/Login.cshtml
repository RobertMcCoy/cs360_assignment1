@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-md-3 col-md-offset-3">
        <h1>Login</h1>
        Email: <input name="email" type="email" class="form-control" placeholder="Enter email">
        <br><br>
        Password: <input name="password" class="form-control" type="password" placeholder="Password" />
        <br><br>
        <form asp-controller="Home" asp-action="index"><input class="btn btn-primary" type="submit" value="Login"></form>
        <br><br>
        <p>No account? <a asp-controller="Home" asp-action="Registration">Sign Up</a></p>
    </div>
</div>
